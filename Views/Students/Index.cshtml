@model DemoMVC.Models.StudentKhoaViewModel

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Students" asp-action="Index" method ="get">
    <p>
        Khoa:
        <select asp-for="StudentKhoa" asp-items="Model.Khoas">
            <option value="">All</option>
        </select><br>

        Ho Ten: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model =>  model.Students[0].Hoten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Masinhvien)
            </th>
            <th>
                @Html.DisplayNameFor(model =>  model.Students[0].Lop)
            </th>
            <th>
                @Html.DisplayNameFor(model =>  model.Students[0].Khoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hoten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Masinhvien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Khoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
